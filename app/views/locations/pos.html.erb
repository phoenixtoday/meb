<div style="width: 78%; height: 550px; border: 2px solid; float: left">
  <% for player in @players %>
    <div style='width: 100px; height: 50px; font-size: 80%; border: 1px solid; margin: 1em'> 
      <%= player.name %>
    </div>
  <% end %>
</div>

<div style="float: left; margin-left: 1em"> 
  <h3> 
    Current player: <%= @player.name %> (<%= link_to "logout", logout_url %>)
  </h3>
  
  <h3> Location: <%= @location %> </h3>
  
  <ul>
    <li> <%= link_to "North", url_for_location(@location.north) %> </li>
    <li> <%= link_to "West", url_for_location(@location.west) %> </li>
    <li> <%= link_to "East", url_for_location(@location.east) %> </li>
    <li> <%= link_to "South", url_for_location(@location.south) %> </li>
  </ul>
</div>

